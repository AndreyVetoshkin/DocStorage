<div>
    @using (Ajax.BeginForm("Search", new AjaxOptions { UpdateTargetId = "results" }))
    {
        <input type="hidden" name="url" value="@HttpContext.Current.Request.Url" />
        <input type="text" name="searchParam" />
        @Html.DropDownList("searchOptions", new SelectList(new string[] { "По имени", "По дате"}))
        <input type="submit" value="Поиск" class="btn btn-default" />
    }
</div>

@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
